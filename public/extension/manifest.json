{
  "manifest_version": 2,

  "name": "Voice Browser",
  "description": "Allows Chrome users to google search via voice, and navigate back and forward in browser history",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["voice_search.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}